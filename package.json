{
  "name": "@testeditor/messaging-service",
  "version": "1.2.0",
  "description": "Angular service for component communication.",
  "main": "./bundles/messaging-service.umd.js",
  "module": "./messaging-service.es5.js",
  "es2015": "./messaging-service.js",
  "typings": "./messaging-service.d.ts",
  "license": "MIT",
  "keywords": [
    "test-editor",
    "angular",
    "messaging"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/test-editor/web-messaging-service"
  },
  "contributors": [
    "Franz Becker",
    "Gunther Bachmann"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">= 6.9.0",
    "npm": ">= 3.0.0"
  },
  "scripts": {
    "clean": "rimraf out-tsc dist/*",
    "prebuild": "npm run clean",
    "build": "node build.js",
    "build-demo": "tsc -p src/demo/",
    "build-demo:watch": "tsc -p src/demo/ -w",
    "serve": "lite-server -c=bs-config.json",
    "prestart": "npm run build-demo",
    "start": "concurrently \"npm run build-demo:watch\" \"npm run serve\"",
    "build-test": "tsc -p src/lib/tsconfig.spec.json",
    "build-test:watch": "tsc -p src/lib/tsconfig.spec.json -w",
    "pretest": "npm run build-test",
    "test": "concurrently \"npm run build-test:watch\" \"karma start karma.conf.js\"",
    "coverage": "karma start karma-coverage.conf.js --single-run",
    "pretest:once": "npm run build-test",
    "test:once": "karma start karma.conf.js --single-run",
    "preintegration": "npm run build && cd integration && npm run clean && yarn install",
    "integration": "npm run integration:aot && npm run integration:jit",
    "integration:jit": "cd integration && npm run e2e",
    "integration:aot": "cd integration && npm run e2e:aot",
    "lint": "tslint ./src/**/*.ts -t verbose",
    "postversion": "git push && git push --tags"
  },
  "peerDependencies": {
    "@angular/core": ">=4.0.0 <6.0.0"
  },
  "devDependencies": {
    "@angular/common": "5.2.2",
    "@angular/compiler": "5.2.2",
    "@angular/compiler-cli": "5.2.2",
    "@angular/core": "5.2.2",
    "@angular/platform-browser": "5.2.2",
    "@angular/platform-browser-dynamic": "5.2.2",
    "@types/jasmine": "2.8.6",
    "@types/node": "9.4.0",
    "camelcase": "4.1.0",
    "concurrently": "3.5.1",
    "core-js": "2.5.3",
    "glob": "7.1.2",
    "jasmine-core": "2.9.1",
    "karma": "2.0.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-cli": "1.0.1",
    "karma-coverage": "1.1.1",
    "karma-html-reporter": "0.2.7",
    "karma-jasmine": "1.1.1",
    "karma-jasmine-html-reporter": "0.2.2",
    "karma-remap-coverage": "0.1.4",
    "lite-server": "2.3.0",
    "rimraf": "2.6.2",
    "rollup": "0.55.1",
    "rollup-plugin-commonjs": "8.3.0",
    "rollup-plugin-node-resolve": "3.0.2",
    "rollup-plugin-sourcemaps": "0.4.2",
    "rollup-plugin-uglify": "3.0.0",
    "rxjs": "5.5.6",
    "systemjs": "0.20.19",
    "tslint": "5.9.1",
    "typescript": "2.6.2",
    "zone.js": "0.8.20"
  }
}
